{# templates/access_denied.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Access Denied</h1>
    <p>You do not have permission to access this page. You will be redirected to the home page in <span id="countdown">3</span> seconds...</p>
{% endblock %}

{% block javascripts %}
    <script>
        var seconds = 3;
        var countdown = setInterval(function() {
            document.getElementById("countdown").innerHTML = seconds;
            seconds--;
            if (seconds < 0) {
                clearInterval(countdown);
                window.location.href = "{{ path('home') }}";
            }
        }, 1000);
    </script>
{% endblock %}