<ul>
    {% for gallery in field.value %}
        {%- set url = ea_url()
        .setController('App\\Controller\\Admin\\GalleryCrudController')
        .setAction('detail')
        .setEntityId(gallery.id)
        -%}
        <li>
            <a href="{{ url }}">
            {{ gallery.name }}
            </a>
        </li>
        {% else %}
        </ul>  
        <span class="badge badge-secondary">None</span>
        <ul>
    {% endfor %}
</ul>
