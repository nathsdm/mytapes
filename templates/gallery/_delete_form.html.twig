<form method="post" action="{{ path('app_gallery_delete', {'id': gallery.id}) }}" onsubmit="return confirm('Are you sure you want to delete this gallery.id?');" class="text-center">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gallery.id) }}">
    <button class="btn btn-danger" style="margin-top:10px">Delete gallery</button>
</form>
