{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ gallery.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gallery.description }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ gallery.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Tapes</th>
                <td>
                {% for tape in gallery.tapes %}
                    <a href="{{ path('tape_show', {'id': tape.id, 'page': 'gallery', 'id_page': gallery.id}) }}">{{ tape.name }}</a><br>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="card-group">
        {% if app.user and Tape.inventory.member.User == app.user %}
        <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}" class="btn btn-primary">edit</a>
        {{ include('gallery/_delete_form.html.twig') }}
        {% endif %}
        <button onclick="history.back()" class="btn btn-secondary">back</button>
    </div>
    <style>
        .card-group a {
            margin-right: 5px;
            margin-left: 5px;
        }
        .card-group button {
            margin-right: 5px;
            margin-left: 5px;
        }
    </style>
{% endblock %}
